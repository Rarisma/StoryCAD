<ContentDialog
    x:Class="StoryBuilder.Services.Dialogs.Tools.TraitsDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:StoryBuilder.Services.Dialogs.Tools"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Trait Builder"
    PrimaryButtonText="Copy to Traits"
    CloseButtonText="Cancel"
    xmlns:usercontrols="using:StoryBuilder.Controls"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="14,0,14,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <usercontrols:Traits x:Name="Trait" x:FieldModifier="public" Grid.Row="4" MinWidth="400" />
    </Grid>
</ContentDialog>
