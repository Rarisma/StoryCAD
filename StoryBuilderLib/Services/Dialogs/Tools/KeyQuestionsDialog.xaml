<ContentDialog
    x:Class="StoryBuilder.Services.Dialogs.Tools.KeyQuestionsDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Key Questions"
    PrimaryButtonText="Done" >

    <StackPanel Padding="14,0,14,0">
        <ComboBox Header="Story Element Type" Width="300" ItemsSource="{x:Bind KeyQuestionsVm.KeyQuestionElements}" 
                  SelectedItem="{x:Bind KeyQuestionsVm.StoryElementName, Mode=TwoWay}" />
        <TextBlock Width="200"/>
        <TextBlock Width="500" Text="{x:Bind KeyQuestionsVm.Topic, Mode=TwoWay}" />
        <TextBlock Width="200" />
        <TextBlock Width="500" Height="300" TextWrapping="Wrap" Padding="0,0,10,0"
                   Text="{x:Bind KeyQuestionsVm.Question, Mode=TwoWay}" />
        <TextBlock Width="200" />
        <StackPanel Orientation="Horizontal">
            <Button Content="Next Question" Click="Next_Click"/>
            <TextBlock Width="50" />
            <Button Content="Previous Question" Click="Previous_Click" />
        </StackPanel>
    </StackPanel>

</ContentDialog>
