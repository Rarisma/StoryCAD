<ContentDialog
    x:Class="StoryBuilder.Services.Dialogs.Tools.StockScenesDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Stock Scenes"
    PrimaryButtonText="Copy"
    SecondaryButtonText="Cancel" >
  
    <StackPanel Padding="14,0,14,0">
        <ComboBox Header="Scene Categories" Width="400" ItemsSource="{x:Bind StockScenesVm.StockSceneCategories, Mode=TwoWay}" 
                  SelectedItem="{x:Bind StockScenesVm.CategoryName, Mode=TwoWay}" />
        <TextBlock Width="200"/>
        <ListView Header="Scenes" Width="400" Height="400" 
                  ItemsSource="{x:Bind StockScenesVm.StockSceneList, Mode=TwoWay}" 
                  SelectedItem="{x:Bind StockScenesVm.SceneName, Mode=TwoWay}"/>
    </StackPanel>
</ContentDialog>
