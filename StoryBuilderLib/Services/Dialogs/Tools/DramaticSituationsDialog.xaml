<ContentDialog
    x:Class="StoryBuilder.Services.Dialogs.Tools.DramaticSituationsDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Dramatic Situations"
    PrimaryButtonText="Copy as Problem"
    SecondaryButtonText="Copy as Plot Point"
    CloseButtonText="Cancel" >

    <StackPanel Padding="14,0,14,0">
        <ComboBox Header="Dramatic Situations" Width="400" ItemsSource="{x:Bind DramaticSituationsVm.SituationsSource, Mode=TwoWay}" 
                  SelectedItem="{x:Bind DramaticSituationsVm.SituationName, Mode=TwoWay}" />
        <TextBlock Width="200"/>
        
    </StackPanel>
</ContentDialog>
