<ContentDialog
    x:Class="StoryBuilder.Services.Dialogs.SaveAsDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    Title="Save Project As:"
    PrimaryButtonText="Save"
    CloseButtonText="Cancel" >


    <StackPanel Padding="14,14,14,24">
        <TextBox x:Name="ProjectName"  x:FieldModifier="public" Width="400" HorizontalAlignment="Left" 
                 Header="Project Name" Text="{x:Bind SaveAsVm.ProjectName, Mode=TwoWay}" />
        <StackPanel Orientation="Horizontal" Padding="0,0,0,14" >
            <TextBox x:Name="ProjectPathName" Header="Parent Folder Path" Width="400" 
                     Text="{x:Bind SaveAsVm.ProjectPathName, Mode=TwoWay}" />
            <TextBlock Width="25" />
            <Button Content="Browse" Click="OnClick" VerticalAlignment="Bottom"  />
        </StackPanel>
    </StackPanel>
</ContentDialog>
