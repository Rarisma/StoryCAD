<Page
    x:Class="StoryBuilder.Services.Dialogs.NewRelationshipPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Orientation="Horizontal" Width="500">
        <TextBlock  Text="{x:Bind CharVM.Name}" VerticalAlignment="Center"/>
        <TextBlock  Text=" is a " VerticalAlignment="Center"/>
        <ComboBox  MinWidth="150" ItemsSource="{x:Bind  NewRelVM.SimpleRelationTypes}" SelectedItem="{x:Bind  NewRelVM.RelationType, Mode=TwoWay}" Margin="10"/>
        <TextBlock  Text=" to " VerticalAlignment="Center" Margin="0,0,10,0"/>
        <ComboBox IsEditable="False" MinWidth="150" ItemsSource="{x:Bind NewRelVM.ProspectivePartners}" DisplayMemberPath="Name" SelectedItem="{x:Bind  NewRelVM.SelectedPartner, Mode=TwoWay}" VerticalAlignment="Center"/>
    </StackPanel>
</Page>
