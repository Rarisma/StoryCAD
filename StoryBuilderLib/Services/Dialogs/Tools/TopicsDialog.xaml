<ContentDialog
    x:Class="StoryBuilder.Services.Dialogs.Tools.TopicsDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Topic Information"
    PrimaryButtonText="Done" >

    <StackPanel Padding="14,0,14,0">
        <ComboBox Header="Topics" MinWidth="300" ItemsSource="{x:Bind TopicsVm.TopicNames}" 
                  SelectedItem="{x:Bind TopicsVm.TopicName, Mode=TwoWay}" />
        <TextBlock Width="50"/>
        <TextBox Header="SubTopic" MinWidth="300" IsReadOnly="True" 
                 Text="{x:Bind TopicsVm.SubTopicName, Mode=TwoWay}" /> 
        <TextBlock Width="50" />
        <TextBox Header="Notes" MinWidth="400" MinHeight="250" TextWrapping="Wrap"
                   IsReadOnly="True" Text="{x:Bind TopicsVm.SubTopicNote,Mode=TwoWay}" />
        <TextBlock Width="50" />
        <StackPanel Orientation="Horizontal">
            <Button Content="Next SubTopic" Click="Next_Click"/>
            <TextBlock Width="50" />
            <Button Content="Previous SubTopic" Click="Previous_Click" />
        </StackPanel>
    </StackPanel>
</ContentDialog>
